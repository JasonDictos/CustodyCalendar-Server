    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "TypeScript",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--loader", "ts-node/esm", "--experimental-specifier-resolution=node"],
            "program": "${workspaceFolder}\\src\\server\\server.ts",
            "preLaunchTask": "npm: build",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Knex",
            "runtimeExecutable": "node",
            "program": "${workspaceFolder}\\node_modules\\knex\\bin\\cli.js",
			"args": [
				"--esm",
				"--knexfile",
				"src/schema/portal/knexfile.cjs",
				"migrate:latest"
			],
            "console": "integratedTerminal"
        }
    ]
}
